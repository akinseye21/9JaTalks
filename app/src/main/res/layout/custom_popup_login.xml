<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#00000000">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/poppinsregular"
            android:text="X"
            android:id="@+id/close"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/white_card">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/green_card" />
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp"
                    app:civ_border_overlay="true"
                    android:layout_centerInParent="true"
                    app:civ_circle_background_color="@color/white"
                    android:src="@drawable/user_icon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Log into your account"
                    android:textColor="#696b6e"
                    android:textSize="14dp" />
        </RelativeLayout>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/new_login2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center">
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/user_icon"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Email or username"
                    android:textColorHint="#5e000000"
                    android:textColor="#5e000000"
                    android:fontFamily="@font/poppinsmedium"
                    android:inputType="textEmailAddress"
                    android:textSize="10dp"
                    android:id="@+id/edtemail"
                    android:singleLine="true"
                    android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/new_login2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center">
            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/key"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:hint="Password"
                    android:textColorHint="#5e000000"
                    android:textColor="#5e000000"
                    android:fontFamily="@font/poppinsmedium"
                    android:inputType="textPassword"
                    android:textSize="10dp"
                    android:id="@+id/edtpassword"
                    android:singleLine="true"
                    android:background="@android:color/transparent"/>

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">

            <CheckBox
                    android:id="@+id/remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:buttonTint="#5e000000"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Remember Me"
                    android:textColor="#5e000000"
                    android:textSize="10dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/lostpassword"
                    android:text="Lost Password?"
                    android:textColor="#5e000000"
                    android:textSize="10dp" />
        </RelativeLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/green_card"
                android:layout_marginTop="10dp"
                android:text="Log into your account"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsmedium"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/createaccount"
                android:text="Create an account"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#5e000000"
                android:fontFamily="@font/poppinsmedium"/>




    </LinearLayout>

</RelativeLayout>