<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        tools:context=".Resources">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp">

            <ImageView
                    android:id="@+id/menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu"
                    app:tint="@color/color2" />

            <TextView
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/user"
                    android:fontFamily="@font/poppinslight"
                    android:text="Register"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/register"
                    android:fontFamily="@font/poppinslight"
                    android:text="Login"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user"
                    android:tint="@color/white"
                    android:id="@+id/user"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:civ_border_color="@color/color2"
                    app:civ_border_width="0.5dp"
                    app:civ_border_overlay="true"
                    app:civ_circle_background_color="@color/white"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publications"
                        android:textColor="@color/color2"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppinsregular"/>

                <GridView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:stretchMode="columnWidth"
                        android:padding="20dp"
                        android:scrollbars="horizontal"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"
                        android:id="@+id/mygrid"
                        android:numColumns="3"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Policy Brief"
                        android:textColor="@color/color2"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppinsregular"/>

                <GridView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:stretchMode="columnWidth"
                        android:padding="20dp"
                        android:scrollbars="horizontal"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"
                        android:id="@+id/mygrid2"
                        android:numColumns="3"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GOTV Videos"
                        android:textColor="@color/color2"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppinsregular"/>

            </LinearLayout>
        </ScrollView>




    </LinearLayout>



    <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header" >
    </com.google.android.material.navigation.NavigationView>


